{
  "name": "@mcptoolshop/ai-music-sheets",
  "version": "1.0.0",
  "description": "Piano sheet music in hybrid JSON + musical-language format â€” built for LLMs to read, reason about, and teach from",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
