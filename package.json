  },
  "license": "MIT",
  "dependencies": {
    "midi-file": "^1.2.4",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "tsx": "^4.19",
    "typescript": "^5.7",
    "vitest": "^3.0"
